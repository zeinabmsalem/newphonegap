<?xml version='1.0' encoding='utf-8'?>
<widget id="com.seshabooks.seshatbooksapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SeshatBooks</name>
    <description>
        Peer to peer Library. Find books around you!
    </description>
    <author email="ahmed@seshtbooks.com" href="http://www.seshatbooks.com">
        Apache Cordova Team
    </author>
    <icon density="mdpi" height="57" platform="ios" src="res/icon/icon/logo.png" width="57" />
    <icon density="mdpi" height="57" platform="android" src="res/icon/icon/logo.png" width="57" />
    <content src="index.html" />
    <access origin="*" />
<!--     <access origin="http://192.168.1.6" /> -->

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- added by me  -->
<!--     <allow-navigation href="*" />
    <allow-intent href="http://192.168.1.6/*" /> -->

    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <!-- added by me -->
<!--         <uses-permission name="android.permission.ACCESS_COARSE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_FINE_LOCATION" />
        <uses-permission name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" /> -->
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <engine name="android" spec="^7.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <!-- added by me -->
    <!-- <plugin name="cordova.plugins.diagnostic" version="*" /> -->

</widget>
